.list {
  width: 100%;
  height: calc(100vh - 100rpx);
  position: absolute;
  top: 0;
}
.list .item {
  background: #fff;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 24rpx 24rpx 0;
}
.list .item:first-child {
  margin-top: 30rpx;
}
.list .item-name {
  font-size:28rpx;
  font-weight:400;
  color:rgba(52,198,145,1);
  line-height:40rpx;
}
.list .item-tip {
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.list .item-address {
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  padding: 22rpx 0;
  border-bottom: 2rpx solid #EEEEEE;
  display: block;
}
.list .item-footer {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border: 2rpx solid rgba(238,238,238,1);
  box-sizing: border-box;
}
/* 选中后的 背景样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: #34C691;
}
/* 选中后的 对勾样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size:30rpx;
  color:#fff;
  background: transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.list .item-default {
  font-size:28rpx;
  font-weight:400;
  color:rgba(52,198,145,1);
  line-height:40rpx;
  padding-left: 10rpx;
}
.list .item-options {
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:37rpx;
  padding-left: 5rpx;
}

/* 底部操作按钮 */
.footer {
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background:rgba(52,198,145,1);
  font-size:36rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}