page {
  background: #fff;
}
.list {
  display: flex;
  flex-direction: column;
  padding: 0 24rpx;
}
.list .item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #EEEEEE;
}
.list .item-name {
  width: 150rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:37rpx;
  text-align: left;
}
.list .item-value {
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:37rpx;
}
.list .btn {
  margin-top: 100rpx;
  width:626rpx;
  height:88rpx;
  background:rgba(52,198,145,1);
  box-shadow:0rpx 2rpx 12rpx 1rpx rgba(101,237,188,1);
  border-radius:50rpx;
  font-size:36rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:50rpx;
}