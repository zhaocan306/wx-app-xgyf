.list {
  height: 100%;
  padding: 0 24rpx;
}
.border-bottom {
  border-bottom: 2rpx solid #EEEEEE;
}
/* 订单状态 */
.header {
  background:rgba(61,67,93,1);
  border-radius:16rpx 16rpx 1rpx 1rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 63rpx 57rpx 48rpx 23rpx;
  margin-top: 30rpx;
}
.header .header-title {
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:45rpx;
}
.header .header-tip {
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:33rpx;
  padding-top: 14rpx;
}
/* 地址 */
.address {
  display: flex;
  justify-content: center;
  flex-direction: column;
  height: 160rpx;
  background: #fff;
  padding: 0 24rpx;
}
.address .address-name {
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.address .address-default {
  width:75rpx;
  height:36rpx;
  line-height: 36rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  border:2rpx solid rgba(52,198,145,1);
  font-size:24rpx;
  font-weight:400;
  color:rgba(52,198,145,1);
  margin-left: 12rpx;
}
.address .adderss-tip {
  width: 560rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:33rpx;
  padding-top: 5rpx;
}
/* 送达时间 */
.time {
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 24rpx;
}
.time .time-name {
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
/* 订单商品 */
.good {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  background: #fff;
}
.good .good-img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.good .good-detail {
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  flex: 1;
  padding: 30rpx 0;
  box-sizing: content-box;
}
.good .good-name {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:37rpx;
}
.good .good-spec {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
}
.good .good-amount {
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.good .good-price {
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(250,115,41,1);
  line-height:33rpx;
}
.item {
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.item .item-name {
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  display: block;
  width: 130rpx;
}
.item .item-value {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
/* 底部操作 */
.footer {
  height: 98rpx;
  margin: 30rpx 0;
  background: #fff;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.footer .footer-btn {
  width:139rpx;
  height:56rpx;
  background:rgba(255,255,255,1);
  border-radius:34rpx;
  border:2rpx solid rgba(238,238,238,1);
  font-size:24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:56rpx;
  text-align: center;
}
.footer .confirm {
  border:2rpx solid rgba(250,115,41,1);
  color: #FA7329;
  margin-left: 42rpx;
}