/* 顶部栏 */
.list {
  width: 100%;
  height: calc(100% - 98rpx);
  position: absolute;
  top: 0;
}
.header {
  margin: 30rpx 24rpx;
  border-radius: 16rpx;
}
.border-bottom {
  border-bottom: 2rpx solid #EEEEEE;
}
.radius-bottom {
  border-radius: 0 0 16rpx 16rpx;
}
/* 梯形导航栏 */
.nav {
  display: flex;
  align-items: center;
  position: relative;
  height: 96rpx;
  background: #EAEBF0;
  border-radius: 16rpx 16rpx 0 0;
}
.nav-item-default {
  width: 50%;
  height: 96rpx;
  position: absolute;
  transform: perspective(0.7em) rotateX(0.5deg);
  z-index: 0;
}
.nav-item-left-default {
  border-radius: 16rpx 0 0 0;
  transform-origin: bottom left;
  left: 0;
}
.nav-item-right-default {
  border-radius: 0 16rpx 0 0;
  transform-origin: bottom right;
  right: 0;
}
.nav-item-active {
  width: 50%;
  height: 96rpx;
  position: absolute;
  background: #fff;
  transform: perspective(0.7em) rotateX(0.5deg);
  border-radius: 16rpx 16rpx 0 0;
  z-index: 1;
}
.nav-item-left-active {
  left: 0;
  transform-origin: bottom left;
}
.nav-item-right-active {
  right: 0;
  transform-origin: bottom right;
}
.nav-item-name {
  font-size:32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  display: block;
  text-align: center;
  line-height: 96rpx;
}
.nav-item-name-active {
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(52,198,145,1);
}
/* 地址选择栏 */
.address {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 24rpx;
}
.address .address-name {
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.address .address-default {
  width: 75rpx;
  height:36rpx;
  line-height: 36rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border-radius:18rpx;
  border:2rpx solid rgba(52,198,145,1);
  font-size:24rpx;
  font-weight:400;
  color:rgba(52,198,145,1);
  margin-left: 12rpx;
}
.address .address-tip {
  width: 620rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:33rpx;
  padding-top: 5rpx;
}
/* 送达时间 */
