  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  display: block;
  width: 145rpx;
}
.item-content {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.item-value {
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  padding-right: 25rpx;
}
.item-price {
  font-size:28rpx;
  font-weight:500;
