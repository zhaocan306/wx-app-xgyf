/* 商品内容 */
.content {
  background: #fff;
  margin: 0 24rpx;
  border-radius: 16rpx;
  box-sizing: content-box;
}
.content .good {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.good .good-img {
