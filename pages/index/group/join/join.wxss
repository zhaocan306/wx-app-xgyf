.detail-bg {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  z-index: 2018;
}
/* 拼团详情 */
.detail {
  position: relative;
  top: 0;
  z-index: 2019;
  margin: 0 24rpx;
}
.detail .card {
  background:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 59rpx;
  border-radius: 8rpx;
}
.detail .good {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #EEEEEE;
}
.detail .good-img {
  width:124rpx;
  height:124rpx;
  border-radius: 50%;
  margin-right: 17rpx;
}
.detail .good-detail {
  height: 124rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.detail .good-name {
  width: 510rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:37rpx;
}
.detail .good-spec {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
}
.detail .good-amout {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
  padding-left: 23rpx;
}
.detail .good-price {
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(250,115,41,1);
  line-height:33rpx;
}
.detail .good-util {
  font-size:24rpx;
}
.card .card-title {
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:56rpx;
  letter-spacing:1rpx;
  padding-top: 44rpx;
  padding-bottom: 12rpx;
}
.card .card-group {
  display: flex;
  align-items: center;
  position: relative;
  margin-top: 30rpx;
  margin-bottom: 70rpx;
}
.card .card-time {
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.card-group .card-group-header {
  width:117rpx;
  height:90rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}
.card-group .card-group-header:last-child {
  margin-right: 0;
}
.card-group .card-group-item {
  width:90rpx;
  height:90rpx;
  background:rgba(255,235,224,1);
  border:2rpx solid rgba(238,238,238,1);
  border-radius: 50%;
}
.card-group .card-group-icon {
  font-size:48rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(250,115,41,1);
  letter-spacing:1rpx;
}
.card .card-group-img {
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  border:2rpx solid rgba(238,238,238,1);
}
.card .card-group-tip {
  width:117rpx;
  height:42rpx;
  line-height: 42rpx;
  text-align: center;
  background:linear-gradient(46deg,rgba(254,162,136,1) 0%,rgba(254,143,129,1) 100%);
  border-radius:21rpx;
  position: absolute;
  bottom: -22rpx;
  font-size:28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.card .card-btn {
  width:615rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,168,84,1) 0%,rgba(254,131,51,1) 100%);
  box-shadow:0rpx 4rpx 9rpx 0rpx rgba(255,167,125,0.5);
  border-radius:52rpx;
  font-size:36rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  letter-spacing:1rpx;
  margin-bottom: 74rpx;
}
/* 标题 */
.rank-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 36rpx 0;
}
.rank-item .line-left {
  width:167rpx;
  height:2rpx;
  background: linear-gradient(to right, #FFFFFF , #FE8F81);
  display: block;
}
.rank-item .line-right {
  width:167rpx;
  height:2rpx;
  background: linear-gradient(to left, #FFFFFF , #FE8F81);
  display: block;
}
.rank-item .rank-title {
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(250,115,41,1);
  line-height:45rpx;
  letter-spacing:1rpx;
  padding: 0 33rpx;
}
/* 商品 */
.list-item {
  height:213rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  margin: 0 19rpx 0;
  position: relative;
  padding-left: 13rpx;
  padding-right: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.list-footer {
  height: 24rpx;
  background: #00C657;
  margin: 0 19rpx;
  border-radius: 0 0 23rpx 23rpx;
}
.list-flag {
  width:63rpx;
  height:71rpx;
  position: absolute;
  left: 31rpx;
  top:0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.list-img {
  width:143rpx;
  height:142rpx;
  margin-right: 5rpx;
}
.list-detail {
  height: 100%;
  padding-top: 12rpx;
  padding-bottom: 19rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.list-title {
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  width: 490rpx;
}
.list-spec {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
}
.list-progress {
  width:311rpx;
  height:33rpx;
  background: #BEFFE7;
}
.list-member {
  font-size:22rpx;
  font-weight:600;
  color:rgba(250,115,41,1);
  line-height:30rpx;
}
.list-price {
  font-size:32rpx;
  font-weight:600;
  color:rgba(250,115,41,1);
  line-height:30rpx;
}
.list-original {
  font-size:22rpx;
  color:rgba(153,153,153,1);
  line-height:30rpx;
  text-decoration: line-through;
  flex: 1;
  padding-left: 10rpx;
}
.list-btn {
  width:126rpx;
  height:44rpx;
  background:rgba(250,115,41,1);
  border-radius:22rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: flex;
  align-items: center;
  justify-content: center;
}