/* ==================
         进度条
 ==================== */
.cc-progress {
	overflow: hidden;
	height: 28rpx;
	background-color: #ebeef5;
	display: inline-flex;
	align-items: center;
	width: 100%;
}
.cc-progress+view,
.cc-progress+text {
	line-height: 1;
}
.cc-progress.xs {
	height: 10rpx;
}
.cc-progress.sm {
	height: 20rpx;
}
.cc-progress view {
	width: 0;
	height: 100%;
	align-items: center;
	display: flex;
	justify-items: flex-end;
	justify-content: space-around;
	font-size: 20rpx;
	color: #fff;
	transition: width 0.6s ease;
}
.cc-progress text {
	align-items: center;
	display: flex;
	font-size: 20rpx;
	color: #000;
	text-indent: 10rpx;
}
.cc-progress.text-progress {
	padding-right: 60rpx;
}
.cc-progress.striped view {
	background-image: linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent);
	background-size: 72rpx 72rpx;
}
.cc-progress.active view {
	animation: progress-stripes 2s linear infinite;
}
@keyframes progress-stripes {
	from {
		background-position: 72rpx 0;
	}

	to {
		background-position: 0 0;
	}
}
/* ==================
         轮播图
 ==================== */
.swiper-container {
  position: relative;
}
.swiper-container .card-swiper {
	height: 309rpx !important;
}
.card-swiper swiper-item {
	width: 630rpx !important;
	left: 60rpx;
	box-sizing: border-box;
	overflow: initial;
}
.card-swiper swiper-item .swiper-item {
	width: 100%;
	display: block;
	height: 100%;
	border-radius: 12rpx;
	transform: scale(0.9);
	transition: all 0.2s ease-in 0s;
	overflow: hidden;
}
.card-swiper swiper-item.cur .swiper-item {
	transform: none;
	transition: all 0.2s ease-in 0s;
}
.swiper-item .swiper-img {
  width: 630rpx;
  height: 309rpx;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  z-index: 999;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 10rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
  opacity: 0.7;
}
.swiper-container .dots .dot.dot-active{
  width: 35rpx;
  background: #fff;
  opacity: 1!important;
}
.swiper-container .swiper-tap {
  width: 94rpx;
  height: 44rpx;
  position: absolute;
  right: 24rpx;
  bottom: 20rpx;
  z-index: 999;
  display: flex;
  justify-content: center;
  background:rgba(0,0,0,1);
  border-radius:26rpx;
  opacity:0.26;
}
.swiper-container .swiper-num {
  font-size:26rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 44rpx;
}
/* ==================
         模态窗口
 ==================== */
.cc-modal {
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 1110;
	opacity: 0;
	outline: 0;
	text-align: center;
	-ms-transform: scale(1.185);
	transform: scale(1.185);
	backface-visibility: hidden;
	perspective: 2000rpx;
	background: rgba(0, 0, 0, 0.6);
	transition: all 0.3s ease-in-out 0s;
	pointer-events: none;
}
.cc-modal::before {
	content: "\200B";
	display: inline-block;
	height: 100%;
	vertical-align: middle;
}
.cc-modal.show {
	opacity: 1;
	transition-duration: 0.3s;
	-ms-transform: scale(1);
	transform: scale(1);
	overflow-x: hidden;
	overflow-y: auto;
	pointer-events: auto;
}
.cc-dialog {
	position: relative;
	display: inline-block;
	vertical-align: middle;
	margin-left: auto;
	margin-right: auto;
	width: 680rpx;
	max-width: 100%;
	background-color: #f8f8f8;
	border-radius: 10rpx;
	overflow: hidden;
}
.cc-modal.bottom-modal::before {
	vertical-align: bottom;
}
.cc-modal.bottom-modal .cc-dialog {
	width: 100%;
	border-radius: 0;
}
.cc-modal.bottom-modal {
	margin-bottom: -1000rpx;
}
.cc-modal.bottom-modal.show {
	margin-bottom: 0;
}