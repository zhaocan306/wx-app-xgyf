.list {
  position: absolute;
  height: calc(100% - 100rpx);
  top: 0;
}
/* 商品轮播图 */
.header {
  height: 652rpx;
}
.header .header-swiper {
  height: 652rpx;
  width: 100%;
  position: absolute;
  z-index: 999;
}
.header image {
  width: 100%;
  height: 100%;
}
/* 拼团 */
.group {
  height:111rpx;
  background:linear-gradient(90deg,rgba(255,168,84,1) 0%,rgba(252,100,2,1) 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 24rpx;
}
.group .group-member-price {
  font-size:44rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  padding-right: 12rpx;
}
.group .group-member-util {
  font-size:24rpx;
}
.group .group-original-price {
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:33rpx;
}
.group .group-people {
  width:113rpx;
  height:40rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border-radius:6rpx;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(250,115,41,1);
  line-height:40rpx;
  margin-top: 8rpx;
}
.group .group-time {
  width:226rpx;
  height:111rpx;
  background:rgba(255,160,116,1);
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}
.group .group-time-title {
  font-size:26rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:37rpx;
}
.group .group-time-item {
  height:43rpx;
  line-height: 43rpx;
  text-align: center;
  background:rgba(250,115,41,1);
  border-radius:8rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  padding: 0 6rpx;
}
.group .group-time-dot {
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
/* 商品简介 */
.content {
  padding: 10rpx 24rpx 26rpx;
  background: #fff;
  position: relative;
}
.content .content-member-price {
  font-size:44rpx;
  font-weight:500;
  color:rgba(250,115,41,1);
  line-height:55rpx;
}
.content .content-util {
  font-size: 24rpx;
}
.content-options {
  position: absolute;
  right: 24rpx;
  bottom: 30rpx;
}
.content .content-original-price {
  line-height:37rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  text-decoration: line-through;
}
.content .content-option {
  font-size: 35rpx;
}
.content .content-option-tip {
  font-size:22rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:30rpx;
  padding-top: 10rpx;
}
.content .content-name {
  height: 90rpx;
  line-height:45rpx;
  font-size:32rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  padding-top: 25rpx;
  padding-bottom: 9rpx;
}
.content .content-tip {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
  padding-bottom: 25rpx;
}
.content .content-icon {
  font-size: 24rpx;
  color:rgba(254,95,8,1);
  margin-right: 11rpx;
}
.content .content-desc {
  font-size:24rpx;
  font-weight:400;
  color:rgba(254,95,8,1);
  line-height:33rpx;
  padding-right: 11rpx;
}
/* 商品介绍 */
.introduce {
  padding: 0 24rpx;
  margin: 10rpx 0;
  background: #fff;
}
.introduce .introduce-img {
  width: 145rpx;
  height: 35rpx;
}
.introduce .introduce-item {
  height: 95rpx;
  border-bottom: 2rpx solid #EEEEEE;
}
.introduce .introduce-item:last-child {
  border: 0;
}
.introduce .introduce-name {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
}
.introduce .introduce-value {
  flex: 1;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  padding-left: 30rpx;
}

.nav {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.nav .nav-line {
  width:6rpx;
  height:33rpx;
  background:rgba(52,198,145,1);
  border-radius:3rpx;
  margin-right: 20rpx;
}
.nav .nav-title {
  font-size:32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  flex: 1;
}
.nav .nav-tip {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
  padding-right: 20rpx;
}
/* 拼团人数 */
.people {
  padding: 0 24rpx;
  margin-bottom: 10rpx;
  background: #fff;
}
.people .people-img {
  width: 72rpx;
  height: 72rpx;
  margin: 30rpx 18rpx 30rpx 0rpx;
  border-radius: 50%;
}
.people .people-name {
  flex: 1;
  width: 100rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.people .people-option {
  height: 72rpx;
  display: flex;
  align-items: center;
}
.people .people-detail {
  height: 72rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-direction: column;
}
.people .people-desc {
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:37rpx;
}
.people .people-tip {
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:37rpx;
}
.people .people-btn {
  width:114rpx;
  height:44rpx;
  line-height: 44rpx;
  text-align: center;
  background:rgba(250,115,41,1);
  box-shadow:0rpx 3rpx 5rpx 0rpx rgba(255,177,149,0.5);
  border-radius:22rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 22rpx;
}
/* 拼团人数 */
.mode {
  padding: 0 24rpx;
  margin-bottom: 10rpx;
  background: #fff;
  padding-bottom: 10rpx;
}
.mode .mode-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mode .mode-title {
  width:30rpx;
  height:30rpx;
  line-height: 30rpx;
  text-align: center;
  background:rgba(216,216,216,1);
  border-radius: 50%;
  font-size:22rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.mode .mode-name {
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:37rpx;
  padding-left: 10rpx;
}
.mode .mode-tip {
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:30rpx;
}
/* 评论 */
.card {
  background: #fff;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
}
.comment {
  border-bottom: 2rpx solid #EEEEEE;
  margin-bottom: 10rpx;
}
.comment .comment-header {
  padding: 10rpx 0;
}
.comment .icon-star {
  font-size: 22rpx;
  color: #999999;
}
.comment .comment-header-img {
  width:62rpx;
  height:62rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.comment .comment-header-name {
  font-size:24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:33rpx;
}
.comment .comment-header-time {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
}
.comment .comment-content {
  font-size:24rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:33rpx;
  display: block;
  padding-bottom: 25rpx;
}
.comment .comment-list {
  padding-bottom: 20rpx;
}
.comment .comment-list-img {
  width:140rpx;
  height:140rpx;
  margin-right: 47rpx;
  border-radius: 6rpx;
  border: 2rpx solid #e8e8e8;
}
.comment .comment-list-img:last-child {
  margin-right: 0rpx;
}
.comment-footer {
  padding: 24rpx 0;
}
.comment-btn {
  width:185rpx;
  height:59rpx;
  border-radius:30rpx;
  border:2rpx solid rgba(238,238,238,1);
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.detail-list {
  padding-bottom: 30rpx;
  background: #fff;
}
.detail-list-img {
  width: 100%;
}
/* 底部操作 */
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.footer .footer-header {
  background: #fff;
  width: 240rpx;
}
.footer .footer-header-img {
  width: 45rpx;
  height: 40rpx;
  margin-bottom: 7rpx;
}
.footer .footer-header-tip {
  font-size:22rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:30rpx;
}
.footer .footer-btn {
  height: 100rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.footer .footer-name {
  font-size:24rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:33rpx;
}